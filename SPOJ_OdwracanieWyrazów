using System;

namespace SPOJ_OdwracanieWyrazÃ³w
{
    class Program
    {
        static void Main(string[] args)
        {
            string napis;
            while ((napis = Console.ReadLine()) != null)
            {
                string napisodwrocony = "";
                for (int i = napis.Length - 1; i >= 0; i--)
                {
                    napisodwrocony += napis[i];
                }
                Console.WriteLine(napisodwrocony);
            }
        }
    }
}
